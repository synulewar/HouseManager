<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="viewModel"
                type="com.synowkrz.housemanager.babyTask.babyMainMenu.BabyMainMenuViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.synowkrz.housemanager.babyTask.BabyActivity">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/baby_grid"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/frame_padding"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:spanCount="1"
                app:babyListData="@{viewModel.itemList}"
                tools:itemCount="8"
                tools:listitem="@layout/task_grid_view_item">
        </androidx.recyclerview.widget.RecyclerView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addNewBaby"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="20dp"
                app:srcCompat="@android:drawable/ic_input_add"
                android:onClick="@{() -> viewModel.onAddBabyPressed()}"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>